= stylesheet_link_tag 'article_show', media: 'all', 'data-turbolinks-track': 'reload'

= content_for :head do
  meta content="summary" name="twitter:card" 
  meta content="@nytimesbits" name="twitter:site" 
  meta content="@nickbilton" name="twitter:creator" 
  meta content="#{request.original_url}" property="og:url" 
  meta content="#{@article.title}" property="og:title" 
  meta content="#{@article.preview_text}" property="og:description" 
  meta content="#{url_for @article.article_image}" property="og:image" 

#carouselExampleIndicators.carousel.slide data-ride="carousel" 
  .carousel-inner
    .carousel-item.active
      = image_tag (@article.article_image), :class => "d-block, w-100"
      .carousel-caption.d-none.d-md-block
        h1 = @article.title

.news-section
  p = @article.text

.h5 Share on socials
.center_share
  a href ="https://twitter.com/intent/tweet?text=#{@article.title} - #{request.original_url}" class="share_twitter a js-social-share.twitter" target="_blank"
    div class="fab fa-twitter"
  a href ="https://www.facebook.com/sharer/sharer.php?u=#{@article.title} - #{request.original_url}" class="share_facebook a js-social-share.twitter" target="_blank"
    div class="fab fa-facebook-f"

.h3 More News

.card-group
 - @articles.each do |article|
    - if article.article_image.present?
    .card
      div = image_tag (article.article_image), :class=>".card-img-top"
      .card-body
        h5.card-title = article.title
        = link_to "Read More", article_path(article), class:"btn btn-primary"


footer
    div class="main-content"
      div class="left box"
        div class="content"
          p Music, People, Lifestyle and Future Creatives
      div class="center box"
        div class="social"
          a href="https://twitter.com/Argocreatives" class="social_links"
            div class="fab fa-twitter"
          a href="#"class="social_links"
            div class="fab fa-facebook-f"
          a href="https://www.instagram.com/Argocreatives/"class="social_links"
            div class="fab fa-instagram"
          a href ="" class="social_links"
            div class="fab fa-spotify"